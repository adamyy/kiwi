<?xml version="1.0" encoding="utf-8"?>
<manifest package="adamyy.github.com.kiwi"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".KiwiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_kiwi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_kiwi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="adamyy.github.com.kiwi.home.HomeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="adamyy.github.com.kiwi.login.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>